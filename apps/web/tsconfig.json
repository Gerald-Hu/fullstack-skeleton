{
  "extends": "@repo/config/typescript-config/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@utils/*": [
        "./src/utils/*",
      ],
      "@components/*": [
        "./src/components/*",
      ],
      "@hooks/*": [
        "./src/hooks/*",
      ],
      "@store/*": [
        "./src/store/*",
      ],
      "@types/*": [
        "./src/types/*",
      ]
    },
    "strictNullChecks": true
  }
}
